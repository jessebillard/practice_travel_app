<h1>Edit This Trip</h1>

<%= form_for @trip do |f| %>

    <%= f.label :location_id %>
    <%= f.collection_select :location_id, Location.all, :id, :city %>

    <%= f.label :trip_date %>
    <%= f.text_field :trip_date %>

    <%= f.label :traveler_name %>
    <%= f.text_field :traveler_name %>

    <%= f.submit %>

<% end %>